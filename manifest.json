{
  "manifest_version": 3,
  "name": "BigOlogy",
  "version": "2.2.0",
  "description": "AI-powered LeetCode solution analyzer - Get time/space complexity, code quality scores, and detailed explanations. Powered by Claude Sonnet 4.",
  "permissions": [
    "activeTab",
    "storage",
    "offscreen"
  ],
  "host_permissions": [
    "https://leetcode.com/*",
    "https://text.pollinations.ai/*",
    "https://js.puter.com/*",
    "https://api.puter.com/*",
    "https://puter.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://leetcode.com/problems/*",
        "https://leetcode.com/contest/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon10px.png",
    "48": "icons/image50.png",
    "128": "icons/image100px.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon10px.png",
      "48": "icons/image50.png",
      "128": "icons/image100px.png"
    }
  }
}